<h2>Blog Posts</h2>
{{new-post savePost="savePost"}}
<br>
<ul class="list-unstyled">
  {{#each model.posts as |post|}}
      <li>
        <h2>{{#link-to 'posts' post.id}}{{post.title}}{{/link-to}}</h2>
        <ul>
          {{#each post.comments as |comment|}}
          <li>"{{comment.content}}" - {{comment.author}}</li>
          {{/each}}
        </ul>
      </li>
  {{/each}}
</ul>
